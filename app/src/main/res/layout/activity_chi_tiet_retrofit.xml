<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:padding="5dp"
android:layout_height="wrap_content">

<ImageView
    android:id="@+id/idImgUrlCT"
    android:padding="5dp"
    android:layout_width="200dp"
    android:layout_height="200dp"/>

<TextView
    android:padding="5dp"
    android:layout_toRightOf="@+id/idImgUrlCT"
    android:id="@+id/txtAlbumCT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="albumIdCT"
    android:textColor="#F02"
    android:textSize="25dp"
    android:textStyle="bold" />

<TextView
    android:padding="5dp"
    android:layout_toRightOf="@id/idImgUrlCT"
    android:layout_below="@+id/txtAlbumCT"
    android:textStyle="bold"
    android:textColor="#E91E63"
    android:textSize="25dp"
    android:text="id"
    android:id="@+id/txtIdCT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<TextView
    android:padding="5dp"
    android:layout_toRightOf="@id/idImgUrlCT"
    android:layout_below="@+id/txtIdCT"
    android:textStyle="bold"
    android:textColor="#E91E63"
    android:textSize="25dp"
    android:text="id"
    android:id="@+id/txtTitleCT"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

<ImageView
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:id="@+id/idThumbnailCT"
    android:layout_toRightOf="@id/idImgUrlCT"
    android:layout_below="@+id/txtTitleCT"/>

</RelativeLayout>